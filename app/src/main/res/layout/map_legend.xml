<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/dp_130"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            android:drawableLeft="@drawable/red"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_5"
            android:text="Truck type 1"
            android:textColor="@color/material_grey" />

        <TextView
            android:layout_width="@dimen/dp_130"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            android:drawableLeft="@drawable/blue"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_5"
            android:text="Truck type 2"
            android:textColor="@color/material_grey" />

        <TextView
            android:layout_width="@dimen/dp_130"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/dp_5"
            android:drawableLeft="@drawable/green"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_5"
            android:text="Dustbin"
            android:textColor="@color/material_grey" />

    </LinearLayout>

</LinearLayout>